page{
    background-color: #b3d4db;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-avatar{
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
    border-radius: 50%;
}
.user-name{
    margin-top: 100rpx;
    font-size: 32rpx;
    font-weight: bold;
}
.moto-container{
    margin-top: 200rpx;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align: center;
}
.moto {
    font-size: 22rpx;
    line-height: 80rpx;
    font-weight: bold;
}